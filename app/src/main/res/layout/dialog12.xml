<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools = "http://schemas.android.com/tools"

    android:layout_width="350dp"

    android:layout_height="580dp"

    android:layout_gravity="center"

    android:orientation="vertical"

    tools:context=".MainActivity">



    <!-- <ImageView-->

    <!-- android:id="@+id/imageView"-->

    <!-- android:layout_width="wrap_content"-->

    <!-- android:layout_height="wrap_content"-->

    <!-- android:src="@drawable/dgumap" />-->



    <ImageView

        android:id="@+id/gyesangwan"

        android:layout_width="245dp"

        android:layout_height="245dp"

        android:src="@drawable/gyesangwan"

        android:layout_marginTop="15dp"

        android:layout_marginLeft="55dp"/>



    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="@font/nab"

        android:padding="17dp"

        android:layout_marginTop="225dp"

        android:textStyle="bold"

        android:layout_marginLeft="17dp"

        android:text="🏛계산관"/>

    <TextView

        android:id="@+id/explain12"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="@font/na"

        android:padding="17dp"

        android:textAlignment="center"

        android:layout_marginTop="250dp"

        android:layout_marginLeft="17dp"

        android:text="'계산고시학사'가 있던 건물이어서 이런 이름이 붙었다. A동과 B동으로 이루어져 있으며, 교책연구기관인 문화학술원 및 대외교류연구원 등의 교내 연구기관이 위치해 있다.\n\nThis name was given to the building where the 'Gyesan Goshi Haksa' was located. It consists of A-dong and B-dong, and on-campus research institutes such as the Center for Cultural Studies and the Institute for International Exchange are located." />



    <Button

        android:id="@+id/noBtn"

        android:layout_width="35dp"

        android:layout_height="35dp"

        android:layout_alignParentRight="true"

        android:layout_marginTop="15dp"

        android:layout_marginRight="15dp"

        android:background="@drawable/no"

        android:textColor="#FAFDFD"

        android:textSize="14dp"

        android:textStyle="bold"></Button>









</RelativeLayout>